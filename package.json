{
  "name": "katasu.me",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --experimental-https -H local.katasu.me",
    "build": "next build",
    "build:worker": "opennextjs-cloudflare build",
    "start": "next start",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
    "lint": "biome lint --write ./src/**/*",
    "format": "biome format ./src/**/* --write",
    "check": "biome check --write ./src/**/*",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@opennextjs/cloudflare": "^1.0.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "babel-plugin-react-compiler": "^19.1.0-rc.2",
    "budoux": "^0.7.0",
    "motion": "^12.15.0",
    "next": "15.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-use": "^17.6.0",
    "tailwind-merge": "^3.3.1",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@storybook/addon-docs": "^9.0.0",
    "@storybook/addon-links": "^9.0.0",
    "@storybook/addon-onboarding": "^9.0.0",
    "@storybook/nextjs": "^9.0.0",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.2.15",
    "@types/node": "^22.15.23",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/coverage-v8": "3.2.4",
    "esbuild": "^0.25.9",
    "jsdom": "^26.1.0",
    "lefthook": "^1.11.13",
    "postcss": "^8.5.4",
    "storybook": "^9.0.0",
    "storybook-addon-pseudo-states": "^9.0.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.17.0"
  },
  "imports": {
    "#*": [
      "./*",
      "./*.ts",
      "./*.tsx"
    ]
  }
